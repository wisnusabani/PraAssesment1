<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">


        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Alas"
                android:ems="10"
                android:id="@+id/alas_segitiga" android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
                app:layout_constraintHorizontal_bias="0.0"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Tinggi"
                android:ems="10"
                android:id="@+id/tinggi_segitiga" android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="16dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/alas_segitiga"/>
        <Button
                android:text="hitung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hitungsegitiga_btn" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tinggi_segitiga"/>
        <TextView
                android:text="Luas = "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/luas_segitiga" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/hitungsegitiga_btn"
                android:layout_marginTop="24dp"/>
        <TextView
                android:text="Keliling = "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/keliling_segitiga" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/luas_segitiga" android:layout_marginTop="24dp"/>
        <Button
                android:text="share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/share_segitiga" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/keliling_segitiga"
                android:layout_marginTop="24dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>